# ML Learner Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-very-secure-random-secret-key-here-change-this

# Database Configuration (MySQL)
USE_SQLITE=false
DATABASE_USER=ml_user
DATABASE_PASSWORD=your_secure_mysql_password_here
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=ml_learner

# Server Configuration
PORT=8000
HOST=127.0.0.1

# Gunicorn Configuration
WORKERS=3

# Optional: Logging
LOG_LEVEL=INFO

# Optional: File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB

# Optional: CORS Configuration (if needed)
# CORS_ORIGINS=https://yourdomain.com

# Instructions:
# 1. Copy this file to .env.production
# 2. Fill in your actual values
# 3. Make sure the file has proper permissions (chmod 600 .env.production)
# 4. Never commit .env.production to version control
